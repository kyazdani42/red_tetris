{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "lib": ["dom", "es2015", "es2017"],
    "target": "es6",
    "jsx": "react"
  },
  "include": ["./src/server/**/*", "./src/client/**/*"],
  "exclude": ["node_modules"]
}
